<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.eklitstudio.advokatkotilin.viewmodel.DodavanjeSlucajaUBazuViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.dodavanje_slucaja_u_bazu.vrste_parnica_fragmenti.ParnicaFragment">


    <Spinner
            android:id="@+id/spinner_parnica_vrste_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/light_blue_500"
            android:paddingRight="10dp"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Spinner
            android:id="@+id/spinner_parnica_tabelabodova_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_parnica_vrste_id"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/blue_500"
            android:layout_margin="12dp"
            android:paddingRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_parnica_vrste_id" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>